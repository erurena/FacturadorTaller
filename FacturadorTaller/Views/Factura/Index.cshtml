@model PagedList.IPagedList<FacturadorTaller.Models.Factura>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />


@{
    ViewBag.Title = "Facturas";
}

<h2>Facturas</h2>


@using (Html.BeginForm("Index", "Factura", FormMethod.Get))
{
    <p>
        Busqueda : @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
        <input type="submit" value="Search" />
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.ActionLink("FacturaId", "Index", new { sortOrder = ViewBag.NameSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            @Html.ActionLink("NombreCliente", "Index", new { sortOrder = ViewBag.ClienteSortParm, currentFilter = ViewBag.CurrentFilter })
        </th>
        <th>
            NCF
        </th>
        <th>
            Cotizacion
        </th>
        <th>
            Orden Compra
        </th>
    </tr>

    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelitem => item.CotizacionId)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.Cotizacion.Clientes.NombreCliente)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.Ncf)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.CotizacionId)
        </td>
        <td>
            @Html.DisplayFor(modelitem => item.OrdenCompraNu)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.FacturaId }) |
            @Html.ActionLink("Imprimir", "Pdf", new { id = item.FacturaId, cotId = item.CotizacionId }) |
            @Html.ActionLink("Pagar", "Pago", new { id = item.FacturaId}) |
            @Html.ActionLink("Eliminar", "CotDelete", new { id = item.FacturaId})
        </td>
    </tr>
    }


</table>
<br />
    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
        new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))

