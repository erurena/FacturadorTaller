@model FacturadorTaller.ViewModel.CreafacturaViewModel

@{
    /**/

    ViewBag.Title = "Editar Factura";
}

<h2>Editar Factura</h2>

@using (Html.BeginForm("Edit", "Factura", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @Html.HiddenFor(model => model.Factura.FacturaId)

    <div class="form-group">
        @Html.LabelFor(model => model.Factura.CotizacionId)
        @Html.TextBoxFor(model => model.Factura.CotizacionId, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Factura.CotizacionId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FechaFac)
        @Html.TextBoxFor(model => model.FechaFac, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FechaFac, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.FechaVen)
        @Html.TextBoxFor(model => model.FechaVen, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.FechaVen, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Factura.OrdenCompraNu)
        @Html.TextBoxFor(model => model.Factura.OrdenCompraNu, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Factura.OrdenCompraNu, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Factura.Ncf)
        @Html.TextBoxFor(model => model.Factura.Ncf, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Factura.Ncf, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Factura.FechaNcf)
        @Html.TextBoxFor(model => model.Factura.FechaNcf, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Factura.FechaNcf, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Modificar" class="btn btn-primary btn-lg" />
        </div>
    </div>
}
