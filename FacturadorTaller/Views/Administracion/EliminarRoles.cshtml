@model FacturadorTaller.ViewModel.EliminarRolViewModel
<h3>Inactivar Usuario Role</h3>

@using (Html.BeginForm("EliminarRoles", "Admin"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)


    <p>
        Nombre Usuario : @Html.TextBoxFor(u => u.ApplicationUser.UserName)
        Role           : @Html.DisplayFor(u => u.RoleA)
    </p>

    <input type="submit" value="Inactivar Role Usuario" />
}