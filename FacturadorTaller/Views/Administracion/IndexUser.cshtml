@model FacturadorTaller.Models.GroupedUserViewModel

<p>
    @Html.ActionLink("Crear Usuario", "Register", "Account")
</p>
<table class="table">
    <tr>
        <th>
            Nombre Usuario
        </th>
        <th>
            Correo
        </th>
        <th>
            Rol
        </th>
    </tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelitem => user.Username)
            </td>
            <td>
                @Html.DisplayFor(modelitem => user.Email)
            </td>
            <td>
                @Html.DisplayFor(modelitem => user.RoleName)
            </td>
            <td>
                @Html.ActionLink("Eliminar Roles", "EliminarRoles", new { NomUsuario = user.Username })
            </td>
        </tr>
    }
</table>
