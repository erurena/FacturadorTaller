@model FacturadorTaller.Models.Clientes

@{
    ViewBag.Title = "Crear Cliente";
}

<h2>Crear Cliente</h2>

@using (Html.BeginForm("Create", "Clientes", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.NombreCliente)
        @Html.TextBoxFor(model => model.NombreCliente, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NombreCliente, "", new { @class = "text-danger" })
    </div>
            <div class="form-group">
                @Html.LabelFor(model => model.RncCliente)
                @Html.TextBoxFor(model => model.RncCliente, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.RncCliente, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.DireccionCliente)
                @Html.TextBoxFor(model => model.DireccionCliente, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DireccionCliente, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.TelefonoCliente)
                @Html.TextBoxFor(model => model.TelefonoCliente, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TelefonoCliente, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ContactoCliente)
                @Html.TextBoxFor(model => model.ContactoCliente, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ContactoCliente, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.CorreoCliente)
                @Html.TextBoxFor(model => model.CorreoCliente, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CorreoCliente, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Crear" class="btn btn-primary btn-lg" />
                </div>
            </div>
}
<div>
    @Html.ActionLink("Volver a lista", "Index")

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script>
                $(document).on('submit', 'form', function () {
                    var buttons = $(this).find('[type="submit"]');
                    if ($(this).valid()) {
                        buttons.each(function (btn) {
                            $(buttons[btn]).prop('disabled', true);
                        });
                    } else {
                        buttons.each(function (btn) {
                            $(buttons[btn]).prop('disabled', false);
                        });
                    }
                });
    </script>
}


