@model FacturadorTaller.ViewModel.NcfViewModel

@{
    ViewBag.Title = "Editar Ncf";
}

<h2>Crear Ncf</h2>

@using (Html.BeginForm("EditNcf", "Administracion", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Ncf.Inicio)
        @Html.TextBoxFor(model => model.Ncf.Inicio, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Ncf.Inicio, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Ncf.NumInicio)
        @Html.TextBoxFor(model => model.Ncf.NumInicio, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Ncf.NumInicio, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Ncf.NumFin)
        @Html.TextBoxFor(model => model.Ncf.NumFin, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Ncf.NumFin, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.NcfFecha)
        @Html.TextBoxFor(model => model.NcfFecha, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.NcfFecha, "", new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Ncf.Estatus)
        @Html.TextBoxFor(model => model.Ncf.Estatus, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Ncf.Estatus, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Actualizar" class="btn btn-primary btn-lg" />
        </div>
    </div>
}
<div>
    @Html.ActionLink("Volver a lista", "IndexNcf")

</div>
